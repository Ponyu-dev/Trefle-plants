<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="RoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorSurfaceVariant</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.H1">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/roboto_bold.h1_headline</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.H2">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/roboto_bold.h2_headline</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.H3">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/roboto.h3_headline</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.H3.Error">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textAppearance">@style/roboto.h3_headline</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Subtitle_1">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAppearance">@style/roboto.subtitle_1</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Subtitle_2">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/roboto.subtitle_2</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Body_1">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/roboto.body_1</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Body_2">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAppearance">@style/roboto.body_2</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Body_1.Drawable">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.Bold_Body_1">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/roboto_bold.body_1</item>
    </style>

    <style name="roboto_bold.h1_headline">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="roboto_bold.h2_headline">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="roboto.h3_headline">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="roboto.subtitle_1">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="roboto.subtitle_2">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="roboto_bold.body_1">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="roboto.body_1">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="roboto.body_2">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="roboto">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="roboto_bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="roboto_italic">
        <item name="fontFamily">@font/roboto_italic</item>
    </style>
</resources>