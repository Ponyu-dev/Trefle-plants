<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/plantsNavGraph">

    <navigation
        android:id="@+id/plantsNavGraph"
        android:label="CountriesNavGraph"
        app:startDestination="@id/plantsFragment">
        <fragment
            android:id="@+id/plantsFragment"
            android:name="com.ponyu.botanical.fragments.plants.PlantsFragment"
            android:label="personal_info_fragment"
            tools:layout="@layout/fragment_plants" >
            <action
                android:id="@+id/action_plantsFragment_to_plantInfoFragment"
                app:destination="@id/plantInfoFragment" />
            <action
                android:id="@+id/action_CountriesFragment_to_filterBottomSheet"
                app:destination="@id/filterBottomSheet" />
        </fragment>
        <dialog
            android:id="@+id/filterBottomSheet"
            android:name="com.ponyu.botanical.fragments.filter.FilterBottomSheetFragment"
            android:label="@string/countries_filter_title"
            tools:layout="@layout/fragment_filter_bottom_sheet" >
            <argument
                android:name="filter_data"
                app:argType="com.ponyu.botanical.fragments.filter.FilterData"
                app:nullable="true" />
        </dialog>
    </navigation>

    <fragment
        android:id="@+id/plantInfoFragment"
        android:name="com.ponyu.botanical.fragments.plant_detail.PlantInfoFragment"
        android:label="fragment_plant_info"
        tools:layout="@layout/fragment_plant_info" />

</navigation>